{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "useUnknownInCatchVariables": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "watch": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
